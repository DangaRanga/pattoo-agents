[Unit]
Description=pattoo-agent-modbustcpd daemon
Wants=network.target
After=network.target

[Service]
Environment="PATTOO_CONFIGDIR=x"
Environment="BIN_DIR=x"
ExecStart=$BIN_DIR/pattoo-agent-modbustcpd --start
ExecStop=$BIN_DIR/pattoo-agent-modbustcpd --stop
ExecReload=$BIN_DIR/pattoo-agent-modbustcpd --restart

[Install]
WantedBy=multi-user.target
