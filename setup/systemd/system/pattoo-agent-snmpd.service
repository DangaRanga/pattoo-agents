[Unit]
Description=pattoo-agent-snmpd daemon
Wants=network.target
After=network.target

[Service]
Environment="PATTOO_CONFIGDIR=x"
Environment="BIN_DIR=x"
ExecStart=$BIN_DIR/pattoo-agent-snmpd --start
ExecStop=$BIN_DIR/pattoo-agent-snmpd --stop
ExecReload=$BIN_DIR/pattoo-agent-snmpd --restart

[Install]
WantedBy=multi-user.target
