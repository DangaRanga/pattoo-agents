[Unit]
Description=pattoo-agent-os-spoked daemon
Wants=network.target
After=network.target

[Service]
Environment="PATTOO_CONFIGDIR=x"
Environment="BIN_DIR=x"
ExecStart=$BIN_DIR/pattoo-agent-os-spoked --start
ExecStop=$BIN_DIR/pattoo-agent-os-spoked --stop
ExecReload=$BIN_DIR/pattoo-agent-os-spoked --restart

[Install]
WantedBy=multi-user.target
